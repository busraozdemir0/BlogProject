@using CoreDemo.Models
@model RoleUpdateViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Rol Düzenleme Sayfası</h1>
<form method="post">
    <div class="form-group">
        <label hidden>Role ID</label>
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @hidden = "true" } )
        @*<input hidden type="text" name="Id" values="@Model.Id" class="form-control" />*@
    </div>
    <div class="form-group">
        <label>Role Başlığı</label>
        @Html.TextBoxFor(x => x.name, new { @class="form-control"})
        @*<input type="text" name="name" values="@Model.name" class="form-control" />*@
    </div>

    <button class="btn btn-primary">Rolü Güncelle</button>
</form>

