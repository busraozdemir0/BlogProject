@model EntityLayer.Concrete.Notification
@{
    ViewData["Title"] = "NotificationAdd";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">Bildirim Gönderme Sayfası</h1>
            <br />
            <form class="forms-sample" method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="exampleInputEmail3">Bildirim Başlığı</label>
                    <input type="text" name="NotificationTitle" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Bildirim İçeriği</label>
                    @Html.TextAreaFor(x => x.NotificationDetails, 10, 2, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Bildirim Durumu</label>
                    <input type="text" name="NotificationStatus"  class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary mr-2">Ekle</button>
            </form>
        </div>
    </div>
</div>






