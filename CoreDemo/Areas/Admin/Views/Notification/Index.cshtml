@using EntityLayer.Concrete
@model List<Notification>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h4>Bildirimler</h4>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            @*<a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    <i class="fa fa-wrench"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-user">
                                    <li>
                                        <a href="#" class="dropdown-item">Config option 1</a>
                                    </li>
                                    <li>
                                        <a href="#" class="dropdown-item">Config option 2</a>
                                    </li>
                                </ul>*@
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th hidden>#</th>
                                    <th>Bildirim Başlığı</th>
                                    <th>Bildirim İçeriği</th>
                                    <th>Tarih</th>
                                    <th>Durum</th>
                                    <th>Aktif Yap</th>
                                    <th>Pasif Yap</th>
                                    <th>Güncelle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <th hidden>@item.NotificationID</th>
                                    <td>@item.NotificationTitle</td>
                                    <td>@item.NotificationDetails</td>
                                    <td>@item.NotificationDate.ToShortDateString()</td>
                                    <td>@item.NotificationStatus</td>
                                    <td><a href="/Admin/Notification/NotificationActive/@item.NotificationID" class="btn btn-outline-primary">Aktif</a></td>
                                    <td><a href="/Admin/Notification/NotificationPassive/@item.NotificationID" class="btn btn-outline-dark">Pasif</a></td>

                                    <td><a href="/Admin/Notification/NotificationUpdate/@item.NotificationID" class="btn btn-outline-success">Güncelle</a></td>
                                    <td><a href="/Admin/Notification/NotificationDelete/@item.NotificationID" class="btn btn-outline-danger">Sil</a></td>
                                </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/Notification/NotificationAdd" class="btn btn-secondary">Bildirim Gönder</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

