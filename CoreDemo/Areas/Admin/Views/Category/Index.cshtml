@using X.PagedList
@using X.PagedList.Mvc.Core 
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1>Kategori Listesi</h1>
<br />
<table class="table table-hover">
    <tr>
        <th hidden>#</th>
        <th>Kategori Adı</th>
        <th>Kategori Durumu</th>
        <th>Pasif Yap</th>
        <th>Aktif Yap</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <th hidden>@item.CategoryID</th>
    <td>@item.CategoryName</td>
    <td>@item.CategoryStatus</td>

    <td><a href="/Admin/Category/CategoryActive/@item.CategoryID" class="btn btn-outline-primary">Aktif Yap</a></td>
    <td><a href="/Admin/Category/CategoryPassive/@item.CategoryID" class="btn btn-outline-warning">Pasif Yap</a></td>
    <td><a href="/Admin/Category/CategoryDelete/@item.CategoryID" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');" class="btn btn-danger">Sil</a></td>
    <td><a href="/Admin/Category/CategoryUpdate/@item.CategoryID" class="btn btn-success">Düzenle</a></td>
</tr>
    }
</table>
<a href="/Admin/Category/AddCategory/" class="btn btn-primary">Yeni Kategori</a>
<br /><br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new { page }))

