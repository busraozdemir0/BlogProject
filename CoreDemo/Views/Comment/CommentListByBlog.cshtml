@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">
    <h4>Yorumlar</h4>
    @foreach (var item in Model)
    {
        if (item != null)
        {
            <div class="media">
                <img src="~/CoreBlogTema/images/kullanici.png" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName.</h5>
                    <p>@item.CommentContent</p>
                </div>
            </div>
        }
        else
        {
            <p>İlk Yorumu Siz Yazın...</p>
        }
    }
</div>