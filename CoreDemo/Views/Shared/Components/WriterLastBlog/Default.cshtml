@using EntityLayer.Concrete
@model List<Blog>

<div class="tech-btm">
    <h4>Yazarın Diğer Yazıları</h4>
    @foreach (var item in Model)
    {
      <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="/Blog/BlogReadAll/@item.BlogID">
                    <img src="~/BlogImageFiles/@item.BlogImageYol" class="img-fluid" style="width:150px;height:100px" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">
                <br />
                <h5>
                    <a href="/Blog/BlogReadAll/@item.BlogID">@item.BlogTitle</a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))
                    </span>
                </div>
            </div>

        </div>
    }
</div>