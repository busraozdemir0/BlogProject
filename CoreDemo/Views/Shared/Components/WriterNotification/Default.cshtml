@using EntityLayer.Concrete
@model List<Notification>

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
    <h6 class="p-3 mb-0">Bildirimler</h6>
    @foreach (var item in Model.Where(x => x.NotificationStatus == true).OrderByDescending(x => x.NotificationID).Take(5))
    {
        <div class="dropdown-divider"></div>
        <a class="dropdown-item preview-item" href="/Notification/NotificationDetails/@item.NotificationID">
            <div class="preview-thumbnail">
                <img src="~/WriterImageFiles/onayisaret.jpg" alt="image" class="profile-pic">  <i class="fab fa-circle"></i>
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject font-weight-normal mb-1">@item.NotificationTitle</h6>
                <p class="text-gray ellipsis mb-0"> @item.NotificationDetails</p>
                <p>@item.NotificationDate.ToShortDateString()</p>
            </div>
        </a>
    }

    <div class="dropdown-divider"></div>
    <a href="/Notification/AllNotification/"><h6 class="p-3 mb-0 text-center">Tüm bildirimleri gör</h6></a>
</div>