@using EntityLayer.Concrete
@model List<Blog>

<div class="tech-btm">
    <h3>Son Postlar</h3>
    @foreach (var item in Model.Where(x => x.BlogStatus == true))
    {
        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="/Blog/BlogReadAll/@item.BlogID">
                    <img src="~/BlogImageFiles/@item.BlogImageYol" class="card-img-top img-fluid" style="width:150px;height:100px" alt="">
                </a>
            </div>

            <div class="col-md-7 blog-grid-right">

                <h5>
                    <a href="/CoreBlogTema/BlogReadAll/@item.BlogID">@item.BlogContent.Substring(0, item.BlogContent.Substring(0, 30).LastIndexOf(" "))... </a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))
                    </span>
                </div>
            </div>
            
        </div>
    }
    </div>